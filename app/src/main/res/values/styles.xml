<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light" >
	    <item name="android:textColorPrimary">@color/textColorPrimary</item>
	    <item name="android:textColor">@color/textColor</item>
	    <item name="colorPrimary">@color/primary</item>
	    <item name="colorPrimaryDark">@color/primaryDark</item>
	    <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="CardView.Dark" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="CardView.Light" parent="@style/CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="Snackbar" />

    <style name="Snackbar.Text" parent="@style/Snackbar">
        <item name="android:textSize">@dimen/sb__text_size</item>
        <item name="android:textColor">@color/sb__text_color</item>
        <item name="android:paddingLeft">@dimen/sb__text_padding_left</item>
        <item name="android:paddingTop">@dimen/sb__text_padding_top</item>
        <item name="android:paddingRight">@dimen/sb__text_padding_right</item>
        <item name="android:paddingBottom">@dimen/sb__text_padding_bottom</item>
    </style>

    <style name="Snackbar.Text.Action" parent="@style/Snackbar.Text">
        <item name="android:textColor">@color/sb__action_text_color</item>
        <item name="android:background">@drawable/sb__btn_bg</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
